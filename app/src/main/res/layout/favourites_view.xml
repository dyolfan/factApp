<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fact_bcg1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:background="?colorPrimaryDark"
            android:clipToPadding="false"
            android:elevation="7dp"
            app:contentInsetLeft="0dp"
            app:contentInsetStart="0dp"
            app:layout_constraintBottom_toTopOf="@+id/allFavourites"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:text="Favourite Facts"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/toMainMenu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="start"
                    android:background="@null"
                    android:paddingLeft="15dp"
                    android:paddingRight="10dp"
                    app:srcCompat="@drawable/arrow_back" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <ScrollView
            android:id="@+id/allFavourites"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="20dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="64dp">

            <LinearLayout
                android:id="@+id/facts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fact_1"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 1 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_2"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 7 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_3"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 5 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_4"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 3 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_5"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 2 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_6"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 6 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_7"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 8..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_8"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 4 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_9"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 9..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

                <TextView
                    android:id="@+id/fact_10"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#C842A5F5"
                    android:padding="5dp"
                    android:text="Start of fact 10 ..."
                    android:textColor="@android:color/black"
                    android:textSize="27sp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>